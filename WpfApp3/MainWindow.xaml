<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MatrixSumProduct"
        Title="Сумма и произведение строки матрицы" Height="300" Width="400">
    <Grid>
        <Label Content="Число строк (M):" Margin="10,10,0,0"/>
        <TextBox x:Name="RowsTextBox" Margin="10,30,0,0" Width="50" />

        <Label Content="Число столбцов (N):" Margin="10,60,0,0"/>
        <TextBox x:Name="ColumnsTextBox" Margin="10,80,0,0" Width="50" />

        <Label Content="Номер строки (K):" Margin="10,110,0,0"/>
        <TextBox x:Name="RowNumberTextBox" Margin="10,130,0,0" Width="50" />

        <Label Content="Введите элементы матрицы (разделенные пробелами):" Margin="10,160,0,0"/>
        <TextBox x:Name="InputTextBox" Margin="10,180,0,0" TextWrapping="Wrap" AcceptsReturn="True" />

        <Button Content="Рассчитать" Margin="10,240,0,0" Click="Calculate_Click" />

        <TextBlock x:Name="SumTextBlock" Margin="10,280,0,0" FontSize="14" FontWeight="Bold" />
        <TextBlock x:Name="ProductTextBlock" Margin="10,310,0,0" FontSize="14" FontWeight="Bold" />
    </Grid>
</Window>

